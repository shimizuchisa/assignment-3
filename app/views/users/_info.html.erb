      <!--変数：@user → user-->
      <h2>User info</h2>
      <%= image_tag user.get_profile_image(100, 100) %> <!--image_tagが必要！-->
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <td><%= user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= user.introduction %></td>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
          <span class="fa fa-user-cog"></span>
        <% end %>
      </div>