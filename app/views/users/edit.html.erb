<!--Bookers2-users-edit-->
<main>
  <p><%= render 'layouts/flash' %></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>

        <% if @user.errors.any? %>
          <h3><%= pluralize(@user.errors.count, "count") %>prohibited this obj from being saved:</h3>
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        <% end %>
        <!--<form>　formは付けたらダメ！-->
        <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :name, "Name" %><br>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :image, "Image" %><br>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, "Introduction" %><br>
          <%= f.text_area :introduction, class: "form-control"  %>
        </div>

        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary btn-sm" %>
        </div>
        <% end %>
      <!--</form>-->
      </div>
    </div>
  </div>
</main>


