          <tr>
            <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
            <!--image_tag、サイズの引数を忘れない！-->
            <td><%= book.title %></td>
            <td><%= book.body %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>