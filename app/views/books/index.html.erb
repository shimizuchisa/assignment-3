<!--book-index-->
<div class="container">
  <div class="row">
    <div class="side_bar col-12 col-sm-4">
        <!--userinfo 部分テンプレート呼び出し-->
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, url: '/books', method: :post do |f| %>
        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :body, "Opinion" %><br>
          <%= f.text_area :body %>
        </div>
        <div class="actions">
          <p>
            <%= f.submit "Create Book", class: "btn btn-success mt-3" %>
          </p>
        </div>
        <% end %>
    </div>

    <div class="main_bar col-sm-8">
      <h2>books</h2>
      <table class="table">
        <tbody>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>