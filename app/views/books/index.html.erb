<!--Bookers2-book-index-->
<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <!--userinfo 部分テンプレート呼び出し-->
        <%= render 'users/info', user: @user %>

        <!--newbook 部分テンプレート呼び出し-->
        <%= render 'new', book: @newbook %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table">
          <tbody>
            <tr>
              <th></th><!--profile_imageの部分-->
              <th>Title</th>
              <th>Opinion</th>
            </tr>
            <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
              <!--image_tag、サイズの引数を忘れない！-->
              <td>
                <%= link_to(book_path(book.id)) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>